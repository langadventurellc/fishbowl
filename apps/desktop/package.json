{
  "name": "@fishbowl-ai/desktop",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "tsc --project tsconfig.electron.json && concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc && vite build && tsc --project tsconfig.electron.json",
    "build:electron": "pnpm run build && electron-builder",
    "preview": "vite preview",
    "test": "jest",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "wdio run ../../tests/desktop/wdio.conf.ts",
    "test:e2e:headless": "Xvfb :99 -screen 0 1024x768x24 > /dev/null 2>&1 & sleep 2 && DISPLAY=:99 wdio run ../../tests/desktop/wdio.conf.ts",
    "db:migrate": "node scripts/migrate.js",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist node_modules dist-electron"
  },
  "dependencies": {
    "@fishbowl-ai/shared": "workspace:*",
    "@fishbowl-ai/ui-theme": "workspace:*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.0"
  },
  "devDependencies": {
    "@fishbowl-ai/eslint-config": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "@wdio/cli": "^9.5.4",
    "@wdio/local-runner": "^9.5.4",
    "@wdio/mocha-framework": "^9.5.4",
    "@wdio/spec-reporter": "^9.5.4",
    "concurrently": "^9.2.0",
    "electron": "37.2.3",
    "electron-builder": "26.0.12",
    "jest": "^30.0.4",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "wait-on": "^8.0.3",
    "webdriverio": "^9.5.4"
  },
  "build": {
    "appId": "com.langadventure.fishbowl",
    "productName": "Fishbowl",
    "directories": {
      "app": ".",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
