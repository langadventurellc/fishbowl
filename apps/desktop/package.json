{
  "name": "@fishbowl-ai/desktop",
  "version": "0.0.0",
  "description": "Fishbowl AI Desktop Application",
  "author": "LangAdventure LLC",
  "private": true,
  "type": "module",
  "main": "dist-electron/electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/langadventurellc/fishbowl.git",
    "directory": "apps/desktop"
  },
  "scripts": {
    "dev": "concurrently \"pnpm dev:renderer\" \"pnpm dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "wait-on http://localhost:5173 && nodemon --exec \"vite build --config vite.main.config.ts && vite build --config vite.preload.config.ts && VITE_DEV_SERVER_URL=http://localhost:5173 electron .\" --ext ts --watch src/electron",
    "build": "npm run build:renderer && npm run build:main && electron-builder --publish=never",
    "build:renderer": "tsc && vite build",
    "build:main": "vite build --config vite.main.config.ts && vite build --config vite.preload.config.ts",
    "preview": "vite preview",
    "test": "jest",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "pnpm --filter=@fishbowl-ai/shared build && pnpm run build:renderer && pnpm run build:main && playwright test -c ../../tests/desktop/playwright.config.ts",
    "test:e2e:headless": "pnpm --filter=@fishbowl-ai/shared build && pnpm run build:renderer && pnpm run build:main && (Xvfb :99 -screen 0 1024x768x24 > /dev/null 2>&1 & sleep 2; DISPLAY=:99 playwright test -c ../../tests/desktop/playwright.config.ts)",
    "type-check": "tsc --noEmit",
    "db:migrate": "node scripts/migrate.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "clean": "rm -rf dist dist-electron node_modules/.vite out release",
    "build:all": "electron-builder --mac --win --linux",
    "publish": "electron-builder --publish=always",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "@fishbowl-ai/shared": "workspace:*",
    "@fishbowl-ai/ui-shared": "workspace:*",
    "@fishbowl-ai/ui-theme": "workspace:*",
    "better-sqlite3": "^12.2.0",
    "@hookform/resolvers": "^5.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.61.1",
    "react-router-dom": "^7.7.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@fishbowl-ai/eslint-config": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^15.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "electron": "37.2.3",
    "electron-builder": "26.0.12",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.5",
    "nodemon": "^3.1.10",
    "playwright": "^1.54.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.langadventure.fishbowl",
    "productName": "Fishbowl",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "../../migrations",
        "to": "migrations"
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "!**/*.map",
      "!**/node_modules/**",
      "!**/.DS_Store",
      "!**/Thumbs.db"
    ],
    "compression": "maximum",
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "assets/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        },
        {
          "target": "dmg",
          "arch": "arm64"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
