{
  "name": "@fishbowl-ai/desktop",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "wait-on http://localhost:5173 && nodemon --exec \"tsc --project tsconfig.electron.json && VITE_DEV_SERVER_URL=http://localhost:5173 electron .\" --ext ts --watch src/electron",
    "dev:container": "concurrently \"npm run dev:renderer\" \"npm run dev:main:container\"",
    "dev:main:container": "wait-on http://localhost:5173 && nodemon --exec \"tsc --project tsconfig.electron.json && DISPLAY=:99 VITE_DEV_SERVER_URL=http://localhost:5173 electron .\" --ext ts --watch src/electron",
    "build": "npm run build:renderer && npm run build:main && electron-builder",
    "build:renderer": "tsc && vite build",
    "build:main": "tsc --project tsconfig.electron.json",
    "build:container": "npm run build:renderer && npm run build:main",
    "preview": "vite preview",
    "test": "jest",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "playwright test -c ../../tests/desktop/playwright.config.ts",
    "test:e2e:headless": "Xvfb :99 -screen 0 1024x768x24 > /dev/null 2>&1 & sleep 2 && DISPLAY=:99 playwright test -c ../../tests/desktop/playwright.config.ts",
    "test:e2e:container": "DISPLAY=:99 playwright test -c ../../tests/desktop/playwright.config.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "node scripts/migrate.js",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist dist-electron node_modules/.vite out release",
    "build:all": "electron-builder --mac --win --linux",
    "publish": "electron-builder --publish=always",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "@fishbowl-ai/shared": "workspace:*",
    "@fishbowl-ai/ui-theme": "workspace:*",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.0"
  },
  "devDependencies": {
    "@fishbowl-ai/eslint-config": "workspace:*",
    "@playwright/test": "^1.50.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.0",
    "electron": "37.2.3",
    "electron-builder": "26.0.12",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "playwright": "^1.50.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.langadventure.fishbowl",
    "productName": "Fishbowl",
    "directories": {
      "app": ".",
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "publish": {
      "provider": "github"
    }
  }
}
