{
  "name": "@fishbowl-ai/desktop",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "dev:container": "echo 'Building for container - GUI will not display' && tauri build --debug",
    "build": "tsc && vite build && tauri build",
    "build:container": "tauri build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "jest",
    "test:unit": "jest --passWithNoTests",
    "test:e2e": "wdio run ../../tests/desktop/wdio.conf.ts",
    "test:e2e:headless": "Xvfb :99 -screen 0 1024x768x24 > /dev/null 2>&1 & sleep 2 && DISPLAY=:99 wdio run ../../tests/desktop/wdio.conf.ts",
    "db:migrate": "node scripts/migrate.js",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist src-tauri/target node_modules"
  },
  "dependencies": {
    "@fishbowl-ai/shared": "workspace:*",
    "@fishbowl-ai/ui-theme": "workspace:*",
    "@tauri-apps/api": "^2.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.0"
  },
  "devDependencies": {
    "@fishbowl-ai/eslint-config": "workspace:*",
    "@tauri-apps/cli": "^2.7.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "@wdio/cli": "^9.5.4",
    "@wdio/local-runner": "^9.5.4",
    "@wdio/mocha-framework": "^9.5.4",
    "@wdio/spec-reporter": "^9.5.4",
    "jest": "^30.0.4",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "webdriverio": "^9.5.4"
  }
}
