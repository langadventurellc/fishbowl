{
  "name": "fishbowl",
  "version": "0.0.1",
  "private": true,
  "description": "A desktop and mobile application for creating conversations with multiple AI agents simultaneously. Configure agents with unique personalities, roles, and AI models to enable dynamic brainstorming, problem-solving, and creative exploration.",
  "scripts": {
    "dev:desktop": "turbo run dev --filter=@fishbowl-ai/desktop",
    "dev:mobile": "turbo run dev --filter=@fishbowl-ai/mobile",
    "start:mobile": "cd apps/mobile && pnpm start",
    "build": "turbo run build",
    "build:libs": "turbo run build --filter=!@fishbowl-ai/desktop --filter=!@fishbowl-ai/mobile",
    "build:desktop": "turbo run build --filter=@fishbowl-ai/desktop",
    "build:mobile": "turbo run build --filter=@fishbowl-ai/mobile",
    "build:mobile:development": "turbo run build:development --filter=@fishbowl-ai/mobile",
    "build:mobile:preview": "turbo run build:preview --filter=@fishbowl-ai/mobile",
    "build:mobile:production": "turbo run build:production --filter=@fishbowl-ai/mobile",
    "prebuild:mobile": "turbo run prebuild --filter=@fishbowl-ai/mobile",
    "build:desktop:container": "turbo run build:container --filter=@fishbowl-ai/desktop",
    "test": "turbo run test:unit",
    "test:unit": "turbo run test:unit",
    "test:all": "turbo run test",
    "test:e2e:desktop": "turbo run test:e2e --filter=@fishbowl-ai/desktop",
    "test:e2e:desktop:headless": "turbo run test:e2e:headless --filter=@fishbowl-ai/desktop",
    "test:e2e:mobile": "turbo run test:e2e --filter=@fishbowl-ai/mobile",
    "test:e2e:mobile:headless": "turbo run test:e2e:headless --filter=@fishbowl-ai/mobile",
    "test:e2e:mobile:build:ios": "turbo run test:e2e:build:ios --filter=@fishbowl-ai/mobile",
    "test:e2e:mobile:build:android": "turbo run test:e2e:build:android --filter=@fishbowl-ai/mobile",
    "test:e2e:mobile:android": "turbo run test:e2e:android --filter=@fishbowl-ai/mobile",
    "test:e2e:mobile:android:headless": "turbo run test:e2e:android:headless --filter=@fishbowl-ai/mobile",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "quality": "pnpm lint && pnpm format && pnpm type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "turbo run db:migrate",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "LangAdventure LLC",
  "license": "GPL-3.0-only",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@langadventurellc/tsla-linter": "^2.1.2",
    "@types/node": "^24.0.15",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  }
}
