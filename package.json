{
  "name": "fishbowl",
  "version": "0.0.1",
  "private": true,
  "description": "A desktop and mobile application for creating conversations with multiple AI agents simultaneously. Configure agents with unique personalities, roles, and AI models to enable dynamic brainstorming, problem-solving, and creative exploration.",
  "scripts": {
    "dev:desktop": "turbo run dev --filter=roomful-ai",
    "dev:mobile": "turbo run dev --filter=roomful-ai-mobile",
    "start:mobile": "cd apps/mobile && pnpm start",
    "build": "turbo run build",
    "build:libs": "turbo run build --filter=!roomful-ai --filter=!roomful-ai-mobile",
    "build:desktop": "turbo run build --filter=roomful-ai",
    "build:mobile": "turbo run build --filter=roomful-ai-mobile",
    "build:mobile:development": "turbo run build:development --filter=roomful-ai-mobile",
    "build:mobile:preview": "turbo run build:preview --filter=roomful-ai-mobile",
    "build:mobile:production": "turbo run build:production --filter=roomful-ai-mobile",
    "prebuild:mobile": "turbo run prebuild --filter=roomful-ai-mobile",
    "build:desktop:container": "turbo run build:container --filter=roomful-ai",
    "test": "turbo run test:unit",
    "test:unit": "turbo run test:unit",
    "test:all": "turbo run test",
    "test:e2e:desktop": "turbo run test:e2e --filter=roomful-ai",
    "test:e2e:desktop:headless": "turbo run test:e2e:headless --filter=roomful-ai",
    "test:e2e:mobile": "turbo run test:e2e --filter=roomful-ai-mobile",
    "test:e2e:mobile:headless": "turbo run test:e2e:headless --filter=roomful-ai-mobile",
    "test:e2e:mobile:build:ios": "turbo run test:e2e:build:ios --filter=roomful-ai-mobile",
    "test:e2e:mobile:build:android": "turbo run test:e2e:build:android --filter=roomful-ai-mobile",
    "test:e2e:mobile:android": "turbo run test:e2e:android --filter=roomful-ai-mobile",
    "test:e2e:mobile:android:headless": "turbo run test:e2e:android:headless --filter=roomful-ai-mobile",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\" --log-level silent",
    "quality": "pnpm lint && pnpm format && pnpm type-check",
    "knip": "knip",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:turbo": "rm -rf .turbo packages/*/.turbo apps/*/.turbo tests/*/.turbo && find . -name 'tsconfig.tsbuildinfo' -delete",
    "db:migrate": "turbo run db:migrate",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "LangAdventure LLC",
  "license": "GPL-3.0-only",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@fishbowl-ai/eslint-config": "workspace:*",
    "@langadventurellc/tsla-linter": "^2.1.2",
    "@types/node": "^24.0.15",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "knip": "^5.62.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  }
}
