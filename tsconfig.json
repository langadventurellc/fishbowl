{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "noEmit": true
  },
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".turbo",
    "apps",
    "packages"
  ],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/ui-theme"
    },
    {
      "path": "./apps/desktop"
    },
    {
      "path": "./apps/mobile"
    }
  ]
}
